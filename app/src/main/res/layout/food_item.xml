<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardBackgroundColor="@color/color_card"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_margin="2dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/imageFood"
                    android:layout_width="215dp"
                    android:layout_height="125dp"
                    android:background="@drawable/pizza1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleFood"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:text="TextView"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/descriptionFood"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:fontFamily="@font/roboto"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:text="TextView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:maxWidth="16dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/cost"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/costFood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="5dp"
                                android:layout_weight="1"
                                android:text="666"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="@string/cost2"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_addToCart"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ripple_effect_cart"
                            android:text=""
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>